<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <inset
            android:insetLeft="@dimen/nav_item_background_inset_right"
            android:insetRight="@dimen/nav_item_background_inset_left">
            <shape>
                <corners
                    android:bottomLeftRadius="@dimen/nav_item_background_corner_radius_right"
                    android:bottomRightRadius="@dimen/nav_item_background_corner_radius_left"
                    android:topLeftRadius="@dimen/nav_item_background_corner_radius_right"
                    android:topRightRadius="@dimen/nav_item_background_corner_radius_left" />
            </shape>
        </inset>
    </item>
    <item>
        <inset
            android:insetLeft="@dimen/nav_item_background_inset_right"
            android:insetRight="@dimen/nav_item_background_inset_left">
            <shape>
                <corners
                    android:bottomLeftRadius="@dimen/nav_item_background_corner_radius_right"
                    android:bottomRightRadius="@dimen/nav_item_background_corner_radius_left"
                    android:topLeftRadius="@dimen/nav_item_background_corner_radius_right"
                    android:topRightRadius="@dimen/nav_item_background_corner_radius_left" />
            </shape>
        </inset>
    </item>
    <item>
        <color android:color="@android:color/transparent" />
    </item>
</ripple>
